rg_pair = arg_pair.split('=', 1)
            value = arg_pair[1]
            if arg_pair[1][0] == '"':
                value = value[1:-1].replace('_', ' ')
            else:
                if "." in value:
                    value = float(value)
                else:
                    value = int(value)
            setattr(new_instance, arg_pair[0], value)
